<div class="top-page">
  <%=render "shared/header"%>
</div>

<div class="all__main">
  <ul class="board__new">
    <li>
      <%= link_to '新しく掲示板を建てる', new_board_path, class: "btn btn-outline-dark" %>
    </li>
  </ul>
  <div class="row">
    <div class="box3 col-5">
      <div class='board__main'>
        <h2 class='board__title'>タイトル一覧</h2>       
          <ul class="topic__lists">
            <% @board_all.each do |board|%>
              <li class="topics">
                <%=link_to "#{board.name}", "#", class: "topic" %>
              </li>
            <% end %>
          </ul>
      </div>
    </div>

    <div class="box4 col-7">
      内容説明（クリックで詳細ページへ）
    </div>
  </div>
</div>